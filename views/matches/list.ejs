<!-- This is profile's index.ejs-->

<!--Including Header Partial-->
<%- include ../layouts/header.ejs %>

<!--Using if-check to see if an error occurred and displaying appropriate message-->
<% if (messages.error) { %>
    <p style="color:red"><%- messages.error %></p>
<% } %>
<% if (messages.success) { %>
    <p style="color:blue"><%- messages.success %></p>
<% } %>

<script type="text/javascript">z
    var err = <%- JSON.stringify(messages) %>;
    console.log(err);
</script>
<h1><%=username%></h1>
<table border="0" width='60%'>
    <tr style='text-align:center; background-color:#CCC'>

        <th>Full Name</th>
        <th>Email</th>
        <th>Percent Match</th>
    </tr>
    <% if (data) { %>

        <!-- Loop to find the right user  -->
        <% data.forEach(function(item){ %>

            <!-- Set Identity  -->
            <% var identity = 5 %>
            <% if(item.id == identity) { %> 

                <!--  With the right identity, set the score -->
                <% score = item.score%>

                <!--  Populate matches (loop over database again) -->
                <% data.forEach(function(item2){ %>
                    <%if(item2.id != identity) { %>
                        <%
                        if(item2.score<=score){
                            ratio = item2.score/score
                            ratio = ratio*100;
                            ratio = Math.round(ratio);
                        }
                        else{
                            ratio = score/item2.score;
                            ratio = ratio*100;
                            ratio = Math.round(ratio);
                        }

                        %>

                        <% if(ratio >= 0.75){ %>
                            <tr>
                                <td><%= item2.full_name %></td>
                                <td><%= item2.email %></td>
                                <td><%= ratio %></td>                
                            </tr>
                        <% } %>
                    <% } %>
                <% }) %>
            <% } %>
        <% }) %>
    <% } %>
</table>


<!--Including Footer Partial-->
<%- include ../layouts/footer.ejs %>

